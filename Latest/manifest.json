{
    "name": "Latest_ver.beta-test",
    "version": "0.4.0",
    "manifest_version": 2,
    "description": "サイトにコメントを付与したり、追加したりする事ができる拡張です",
    "icons":{
      "32": "img/icon_off.png"
    },
    "permissions":[
      "contextMenus",
      "tabs",
      "background",
      "http://*/*",
      "https://*/*"
    ],
    "browser_action":{
      "default_icon": "img/icon_off.png",
      "default_title": "Latestを起動する"
    },
    "background":{
      "scripts" : ["bin/background.js"],
      "persistent": false
    },
    "content_scripts": [{
      "matches": [
        "https://*/*", "http://*/*"
      ],
      "js": [
        "include/jquery.min.js", "include/jquery-ui.min.js", "bin/Latest.js"
      ],
      "css": [
        "include/jquery-ui.css"
      ]
    }]
  }